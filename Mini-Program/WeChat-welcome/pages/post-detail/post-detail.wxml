<!--pages/post-detail/post-detail.wxml-->
<view class='container'>
  <image class='head-image' src='{{headImgSrc}}'></image>
  <image  class='audio' src='/images/music/music-start.png'></image>
  <view  class='author-date'>
    <image class='avatar' src='{{author_img}}'></image>
    <text class='author'>{{author}}</text>
    <text class='const-text'>发表</text>
    <text class='const-date'>{{date}}</text>
  </view>
  <text class='title'>{{title}}</text>
  <view class='tool'>
    <image class='circle-img' src='/images/icon/collection.png'></image>
    <image class='share-img' src='/images/icon/share.png'></image>
  </view>
  <view class='horizon'></view>
  <text class='detail'>{{detail}}</text>
</view>
